<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diogocapela.javafxboiler.controllers.PerfisAutorizacaoController">
    <top>
        <VBox alignment="CENTER">
            <children>
                <Label text="Registo de Perfis de Autorização">
                    <font>
                        <Font size="28.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER">
            <children>
                <TableView fx:id="tabela">
                    <columns>
                        <TableColumn fx:id="col1" prefWidth="150.0" text="ID (Unique)"/>
                        <TableColumn fx:id="col2" prefWidth="150.0" text="Descrição"/>
                        <TableColumn fx:id="col3" prefWidth="150.0" text="Área Restrita ID"/>
                        <TableColumn fx:id="col4" prefWidth="150.0" text="Período de Autorização"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label fx:id="errorMessage"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="ID:"/>
                                <TextField fx:id="id" promptText="int (unique)"/>
                            </children>
                        </VBox>

                        <VBox>
                            <children>
                                <Label text="Descrição:"/>
                                <TextField fx:id="descricao" promptText="string"/>
                            </children>
                        </VBox>

                        <VBox>
                            <children>
                                <Label text="Área Restrita ID:"/>
                                <ChoiceBox fx:id="areaRestritaId" prefWidth="150.0"/>
                            </children>
                        </VBox>

                        <VBox>
                            <children>
                                <Label text="Período de Autorização:"/>
                                <ChoiceBox fx:id="periodoAutorizacao" prefWidth="150.0"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button onAction="#handleAddPerfilAutorizacao" text="Adicionar Novo Perfil de Autorização"/>
                        <Button onAction="#handleDeletePerfilAutorizacao" text="Apagar Perfil de Autorização Selecionado"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
